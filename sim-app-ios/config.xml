<?xml version='1.0' encoding='utf-8'?>
<widget id="org.ck12.simulations" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Simulations</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <allow-navigation href="*" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="lightcontent" />
    </platform>
    <preference name="orientation" value="landscape" />
    <preference name="Fullscreen" value="true" />
    <preference name="permissions" value="android.permission.READ_EXTERNAL_STORAGE" />
    <preference name="permissions" value="android.permission.WRITE_EXTERNAL_STORAGE" />
    <engine name="ios" spec="~4.4.0" />
    <plugin name="com.bez4pieci.cookies" spec="0.0.1" />
    <plugin name="cordova-plugin-browsertab" spec="~0.2.0" />
    <plugin name="cordova-plugin-compat" spec="~1.1.0" />
    <plugin name="cordova-plugin-cookieemperor" spec="^1.0.0" />
    <plugin name="cordova-plugin-customurlscheme" spec="~4.1.3">
        <variable name="URL_SCHEME" value="ck12sims" />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
